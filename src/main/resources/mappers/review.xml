<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.kkm_back.DAO.TradeDAO">
    <insert id="heartInsert" parameterType="com.example.kkm_back.Domain.Trade" useGeneratedKeys="true" keyProperty="trade_id" keyColumn="trade_id">
        <selectKey resultType="int" keyProperty="trade_id" order="AFTER">SELECT LAST_INSERT_ID()</selectKey>
        Insert into
        Trade
        values (0, #{post_id}, #{post_owner_id}, #{trader_id}, #{trade_cost},#{trade_state},#{start_time},#{expired_time},#{trade_state_2})
    </insert>

    <select id="tradeList" resultType="map">
        SELECT * FROM Trade
    </select>
</mapper>